<web-app>
    <servlet>
        <servlet-name>TimeServlet</servlet-name>
        <servlet-class>TimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimeServlet</servlet-name>
        <url-pattern>/time</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>TimezoneValidateFilter</filter-name>
        <filter-class>TimezoneValidateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TimezoneValidateFilter</filter-name>
        <url-pattern>/time</url-pattern>
    </filter-mapping>
</web-app>
